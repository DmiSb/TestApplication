<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/colorAccent</item>
    </style>

</resources>
